@model CoreLAB.ViewsModels.MovieViewModel


@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Published)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Published)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Movie.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <input type="hidden" asp-for="NewComment.MovieID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewComment.Content" class="control-label"></label>
                <input asp-for="NewComment.Content" class="form-control" />
                <span asp-validation-for="NewComment.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewComment.Created" class="control-label"></label>
                <input asp-for="NewComment.Created" class="form-control" />
                <span asp-validation-for="NewComment.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Comments.First().Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Comments.First().Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Movie.Comments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
        </tr>
}
    </tbody>
</table>

