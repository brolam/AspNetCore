@model CoreLAB.Models.Movie

@{
    ViewData["Title"] = "Movies";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<div class="container">
    <form asp-action="New">
        <div class="form-group">
            <label for="titleInput">Title</label>
            <input asp-for="Title" type="text" class="form-control" id="titleInput" placeholder="Enter Move Title">
            <small id="titleInputHelp" class="form-text text-muted">Enter with Move title.</small>
        </div>
        <div class="form-group">
            <label for="publishedInput">Password</label>
            <input asp-for="Published" type="date" class="form-control" id="publishedInput" placeholder="Enter with published date">
        </div>
        <div class="form-group">
            <label for="priceInput">Price</label>
            <input asp-for="Price" type="number" class="form-control" id="priceInput" placeholder="Enter with move price">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
